{% extends "base.html.twig" %}
{% block stylesheets %}
{{parent()}}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            {% include "biblio/_form.html.twig" %}
        </div>
    </div>
</div>
{% endblock %}
{% block js %}
{{parent()}}
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="{{asset('script/addWriter.js')}}"></script>
<script>
    $(function() {
        $('.select-types').select2({
            tags: true,
            tokenSeparators: [',',' ']
        }).on('change', function(e){
            // on recupère les options selectionnée dans le select (this)
            let label = $(this).find("[data-select2-tag=true]"); 
            //verifie que le label selectionner n'est pas deja dans la base de donnée ou deja inserer
            if(label.length &&  $.inArray(label.val(), $(this).val() != -1)){ 
                
                fetchBiblio("/type/add/ajax/"+label.val(), label);
                
            }
            
        });

        $('.select-writers').select2({
            tags: true,
            tokenSeparators: [',',' ']
        }).on('change', function(e){
            // on recupère les options selectionnée dans le select (this)
            let label = $(this).find("[data-select2-tag=true]"); 
            //verifie que le label selectionner n'est pas deja dans la base de donnée ou deja inserer
            if(label.length &&  $.inArray(label.val(), $(this).val() != -1)){ 
                
                fetchBiblio("/writer/add/ajax/"+label.val(),label);
                
            }
        });
    });

</script>
{% endblock %}