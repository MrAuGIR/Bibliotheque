
<div id="content">
    <div class="row py-4">
    {% for article in articles | slice(0,6) %}
        <div class="col-12 col-md-6 col-lg-4 my-2">
            <div class="card">
                <div class="picture">
                    <img src="{{article.urlToImage}}" class="card-img-top" alt="{{article.title}}">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{article.title}}</h5>
                    <p class="card-text">{{article.description | slice(0,150)}}</p>
                    <a href="{{article.url}}" class="btn btn-primary">Lire la suite</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>