<div class="tags-line">
  {% for tag in tags %}
  {% set color = tag.color is defined ? tag.color : '#c51919'%}
  {% set code = tag.code is defined ? tag.code : tag %}
  <a href="{{path('biblio_search', {code: code})}}"><span class="tag" style="background-color: {{color}};"
      data-code="{{code}}" data-biblio="{{id}}" js-biblio-tag-search>
      {{code}}</span></a>
  {% endfor %}
</div>
